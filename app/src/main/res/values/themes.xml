<resources>
    <!-- Base application theme. -->
    <style name="Theme.OneLook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_plum</item>
        <item name="colorPrimaryVariant">@color/violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turquoise</item>
        <item name="colorSecondaryVariant">@color/water</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/violet</item>
        <!-- Accent color. -->
        <item name="colorAccent">@color/turquoise</item>
        <!-- On surface color. -->
        <item name="colorOnSurface">@color/black</item>
        <!-- Customize your theme here. -->

        <!-- Text style-->
        <item name="android:textColor">?colorText</item>
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">@dimen/mid_text_size</item>

        <item name="colorText">@color/black</item>
        <item name="colorBackgroundDisabled">@color/gains_boro</item>
        <item name="colorBoardingBackground">@color/violet_light</item>
        <item name="colorTextInputBackground">@color/lilac_petals_dark</item>
    </style>

    <style name="Theme.OneLook.SplashScreen" parent="Theme.SplashScreen">
        <!-- Splash Screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_brand_logo_splash_screen</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.OneLook</item>
    </style>
</resources>