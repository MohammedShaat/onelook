<resources>
    <!-- Base application theme. -->
    <style name="Theme.OneLook" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_plum</item>
        <item name="colorPrimaryVariant">@color/violet</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/turquoise</item>
        <item name="colorSecondaryVariant">@color/water</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="colorAccent">@color/turquoise</item>
        <!-- Customize your theme here. -->

        <!-- Text style-->
        <item name="android:fontFamily">@font/noto_sans</item>
        <item name="android:textSize">@dimen/mid_text_size</item>
    </style>

    <style name="Theme.OneLook.SplashScreen" parent="Theme.SplashScreen">
        <!-- Splash Screen -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_brand_logo_splash_screen</item>
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="postSplashScreenTheme">@style/Theme.OneLook</item>
    </style>

    <style name="CustomHeader">
        <item name="android:textColor">@color/deep_blue</item>
        <item name="android:textSize">@dimen/xlarge_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="CustomPrimaryButton">
        <item name="android:layout_marginBottom">@dimen/xh_margin</item>
        <item name="android:paddingTop">@dimen/s_padding</item>
        <item name="android:paddingBottom">@dimen/s_padding</item>
        <item name="android:paddingStart">@dimen/m_padding</item>
        <item name="android:paddingEnd">@dimen/m_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_primary_button</item>
        <item name="android:drawableEnd">@drawable/ic_right_arrow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorOnPrimary</item>
    </style>

    <style name="CustomSecondaryButton">
        <item name="android:layout_height">56dp</item>
        <item name="android:paddingTop">@dimen/s_padding</item>
        <item name="android:paddingBottom">@dimen/s_padding</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bg_secondary_button</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>

    <style name="CustomTextInputTextView">
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:textColor">@color/dark_grey</item>
    </style>

    <style name="CustomTextInputEditText" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/bg_input</item>
        <item name="android:drawablePadding">@dimen/s_margin</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textColorHint">@color/dark_grey</item>
    </style>

    <style name="CustomNumberPickerStyle">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:colorControlNormal">@android:color/transparent</item>
    </style>

    <style name="CustomTextViewWithIcon">
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">?colorOnSurface</item>
        <item name="android:textStyle">bold</item>
        <item name="android:drawablePadding">@dimen/m_margin</item>
    </style>
</resources>